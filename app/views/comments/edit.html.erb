<h3>Update Comment</h3>
<%= form_with model: @comment do |form| %>
    <div class="form-group">
        <p>
          <%= form.label :title %><br>
          <%= form.text_field :title , class:"form-control",placeholder:"Add a new comment" %>
        </p>
        <p>
            <%= form.submit class:"btn btn-secondary"%>
        </p>
    </div>
<% end %>
