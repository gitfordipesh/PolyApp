<div class="d-flex p-2 justify-content-between">
<h3>All Events</h3>
<Button class="btn btn-secondary text">
  <%= link_to "Add New Event", new_event_path,:class => "text-light"%>
</Button>
</div>

<table class="table table-hover">
    <thead class="thead-dark">
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Title</th>
        <th colspan="3">User Info.</th>
      </tr>
    </thead>
  <% @events.each do |i| %>
    <tbody>
      <tr>
        <td><%= i.id %></td>
        <td><%= i.title %></td>
        <td><%= link_to "Show", event_path(i) %></td>
        <td><%= link_to "Update", edit_event_path(i) %></td> 
        <td><%= link_to "Delete", event_path(i), data:{method: :delete, confirm: "Are you Sure?"}%></td> 
    </tr>
    </tbody>
  <% end %>
</table>
