<h1>Create New News</h1>

<%= form_with(model: @broadcast, url: broadcasts_path) do |form| %>
<div class="form-group">
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title , class:"form-control" %>
  </p>
  <p>
    <%= form.label :is_live %><br>
    <%= form.check_box :is_live , class:"form-control"%>
  </p>
  <p>
    <%= form.submit class:"btn btn-secondary"%>
  </p>
</div>
<% end %>